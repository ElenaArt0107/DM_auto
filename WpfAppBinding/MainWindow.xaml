<Window x:Class="WpfAppBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBox x:Name="NameTxt" Margin="10" FontSize="20" TextChanged="NameSurname_TextChanged">
                    
                </TextBox>
                <TextBlock Margin="10" FontSize="20">Full Name</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBox x:Name="SurnameTxt" Margin="10" FontSize="20" TextChanged="NameSurname_TextChanged">

                </TextBox>
                <TextBlock x:Name="FullNameTxt" Margin="10" FontSize="20"></TextBlock>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>

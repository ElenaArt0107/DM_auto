<h1>List of people</h1>
@{
    var people = new List<Persoon>()
{ new Persoon
    {
        Lijftijd = 22,
        Naam = "A",
        Voornaam = "O"
    },
    new Persoon
    {
        Lijftijd = 12,
        Naam = "Ai",
        Voornaam = "Oi"
    },
        new Persoon
    {
        Lijftijd = 2,
        Naam = "An",
        Voornaam = "On"
    },
};
}
<h2>unordered list</h2>
<ul>

    @foreach (var person in people)
    {
        <li>
            <p>@person.Volledigenaam (@person.Lijftijd)</p>
        </li>
    }
</ul>
<h2>ordered list</h2>
<ol>

    @foreach (var person in people)
    {
        <li>
            <p>@person.Volledigenaam (@person.Lijftijd)</p>
        </li>
    }
</ol>

<h2>table view</h2>
<table border="1">
    <tr>
        <th>voornaam</th>
        <th>naam</th>
        <th>lijftijd</th>
    </tr>
    @foreach (var persoon in people)
    {
        <tr>
            <td>@persoon.Voornaam</td>
            <td>@persoon.Naam</td>
            <td>@persoon.Lijftijd</td>
        </tr>
    }
</table>


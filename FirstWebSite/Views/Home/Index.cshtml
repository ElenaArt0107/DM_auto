@*Razor Syntax*@
@{
    string voornaam = "Avro";
    string naam = "Ra";
    var getal1 = 12;
    var getal2 = 5;
}

@voornaam @naam

<h1>@voornaam @naam</h1>
<hr />
<p><b>getal1: </b>@getal1</p>
<p><b>getal2: </b>@getal2</p>
<p><b>som </b>@getal1+@getal2</p>
<p><b>som </b>@(getal1+getal2)</p>
<p><b>verschill </b>@getal1-@getal2</p>
<p><b>verschill </b>@(getal1-getal2)</p>
<p><b>product </b>@getal1*@getal2</p>
<p><b>product </b>@(getal1*getal2)</p>
<p><b>quatient </b>@getal1/@getal2</p>
<p><b>quatient </b>@(getal1/getal2)</p>
